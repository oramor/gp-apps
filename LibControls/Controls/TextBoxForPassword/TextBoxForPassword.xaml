<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LibControls">

    <FontFamily x:Key="passowrdFont">pack://application:,,,/Resources/Fonts/#password</FontFamily>

    <Style
        BasedOn="{StaticResource {x:Type local:TextBoxWithPlaceholder}}"
        TargetType="{x:Type local:TextBoxForPassword}">
        <Setter Property="FontFamily" Value="{StaticResource passowrdFont}"/>
    </Style>

</ResourceDictionary>