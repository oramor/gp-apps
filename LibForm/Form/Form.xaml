<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LibForm">
    
    <Style TargetType="{x:Type local:Form}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Form}">
                    <StackPanel x:Name="rootStack">
                        <TextBlock Text="{TemplateBinding TopErrorMessage}"
                                   Visibility="Visible"
                                   Background="Tomato"/>
                        <ItemsPresenter/>
                        <Button IsEnabled="{TemplateBinding IsFormReadyToSend}">
                            Вход
                        </Button>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="TopErrorMessage" Value="{x:Null}">
                            <Setter TargetName="rootStack" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>