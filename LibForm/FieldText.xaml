<UserControl x:Class="LibForm.FieldText" x:Name="fieldText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:LibControls;assembly=LibControls"
             xmlns:local="clr-namespace:LibForm"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type local:FieldText}">
            <Style.Triggers>
                <!--<Trigger Property="ErrorMessage" Value="">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Trigger>-->
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <c:TextBoxPlaceholder x:Name="textBoxPlaceholder"
                              DefaultText="{Binding PlaceholderText, ElementName=fieldText}"
                              Text="{Binding Text, ElementName=fieldText, Mode=TwoWay}"/>
        <local:FieldErrorMessage x:Name="fieldErrorMessage"
            Visibility="Visible"
            Text="{Binding ErrorMessage, ElementName=fieldText}"/>
    </StackPanel>
</UserControl>