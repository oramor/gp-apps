<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Montserrat-Medium.ttf" />
    <None Remove="Resources\OverpassMono-Medium.ttf" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\WPFCore\WPFCore.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Montserrat-Medium.ttf" />
    <Resource Include="Resources\OverpassMono-Medium.ttf" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="ResourceFiles.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ResourceFiles.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="ResourceFiles.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ResourceFiles.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
