<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Lib.Wpf.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LibControls;component/PasswordTextBox.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <FontFamily x:Key="password.font">pack://application:,,,/Lib.Wpf.Controls;component/Resources/Fonts/#password</FontFamily>
    
    <SolidColorBrush x:Key="EyeToggleButton.Path.Fill" Color="#1e1e1e"/>

    <Style TargetType="local:PasswordTextBox"
           BasedOn="{StaticResource {x:Type local:PlaceholderTextBox}}">
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsTextVisibility" Value="False"/>
                    <Condition Property="IsEmpty" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter Property="FontFamily" Value="{StaticResource password.font}"/>
            </MultiTrigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>