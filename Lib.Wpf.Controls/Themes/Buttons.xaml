<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:Lib.Wpf.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Lib.Wpf.Controls;component/Themes/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <SolidColorBrush x:Key="Buttons.Static.Border" Color="#303030"/>
    <SolidColorBrush x:Key="Buttons.Static.Background" Color="#fcec5e"/>

    <SolidColorBrush x:Key="Buttons.MouseOver.Border" Color="black"/>
    <SolidColorBrush x:Key="Buttons.MouseOver.Background" Color="#f5e23b"/>

    <SolidColorBrush x:Key="Buttons.Pressed.Border" Color="black"/>
    <SolidColorBrush x:Key="Buttons.Pressed.Background" Color="#f5e23b"/>

    <SolidColorBrush x:Key="Buttons.Disabled.Background" Color="#FFF4F4F4"/>
    <SolidColorBrush x:Key="Buttons.Disabled.Border" Color="#FFADB2B5"/>
    <SolidColorBrush x:Key="Buttons.Disabled.Foreground" Color="#FF838383"/>

    <sys:Double x:Key="Buttons.Border.Thickness">2</sys:Double>

    <Color x:Key="Buttons.OnHover">#f51849</Color>

    <!--<sys:Double x:Key="Buttons.Height">40</sys:Double>
    <sys:Double x:Key="Buttons.Border.Thickness">3</sys:Double>-->

    <!--<Thickness x:Key="Buttons.Margin">0,0,0,15</Thickness>-->

</ResourceDictionary>