<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:Lib.Wpf.Controls">

    <SolidColorBrush x:Key="Inputs.Static.Border" Color="#d4b2ff"/>
    <SolidColorBrush x:Key="Inputs.Static.Background" Color="white"/>
    
    <SolidColorBrush x:Key="Inputs.MouseOver.Border" Color="#d4b2ff"/>
    <SolidColorBrush x:Key="Inputs.MouseOver.Background" Color="white"/>

    <SolidColorBrush x:Key="Inputs.Pressed.Border" Color="#bea0e5"/>
    <SolidColorBrush x:Key="Inputs.Pressed.Background" Color="white"/>

    <sys:Double x:Key="Inputs.Height">40</sys:Double>
    <sys:Double x:Key="Inputs.Border.Thickness">3</sys:Double>

    <!--<Thickness x:Key="Inputs.Margin">0,0,0,15</Thickness>-->

</ResourceDictionary>